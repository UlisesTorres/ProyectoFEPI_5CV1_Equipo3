<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTituloPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Levantar Infracción"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/tvTituloPrincipal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Datos del Vehículo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="12dp"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Placa:" android:textStyle="bold" android:textColor="?android:attr/textColorPrimary"/>
                <EditText android:id="@+id/etPlaca" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Ingresar placa" android:textColor="?android:attr/textColorPrimary" android:textColorHint="?android:attr/textColorSecondary" android:inputType="textCapCharacters"/>

                <Button
                    android:id="@+id/btnConsultarPlaca"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Consultar Placa" />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tipo:" android:layout_marginTop="8dp" android:textColor="?android:attr/textColorSecondary"/>
                <TextView android:id="@+id/tvTipo" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="--" android:padding="8dp" android:textSize="16sp" android:textColor="?android:attr/textColorPrimary"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Marca:" android:layout_marginTop="8dp" android:textColor="?android:attr/textColorSecondary"/>
                <TextView android:id="@+id/tvMarca" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="--" android:padding="8dp" android:textSize="16sp" android:textColor="?android:attr/textColorPrimary"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Modelo:" android:layout_marginTop="8dp" android:textColor="?android:attr/textColorSecondary"/>
                <TextView android:id="@+id/tvModelo" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="--" android:padding="8dp" android:textSize="16sp" android:textColor="?android:attr/textColorPrimary"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Color:" android:layout_marginTop="8dp" android:textColor="?android:attr/textColorSecondary"/>
                <TextView android:id="@+id/tvColor" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="--" android:padding="8dp" android:textSize="16sp" android:textColor="?android:attr/textColorPrimary"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardConductor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/cardVehiculo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Datos del Conductor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="12dp"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Número de Licencia:" android:textStyle="bold" android:textColor="?android:attr/textColorPrimary"/>
                <EditText android:id="@+id/etLicencia" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Ej. L12345678" android:textColor="?android:attr/textColorPrimary" android:inputType="text"/>

                <Button
                    android:id="@+id/btnValidarLicencia"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Validar Conductor" />

                <TextView
                    android:id="@+id/tvEstatusLicencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado: Pendiente de validación"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:textColor="?android:attr/textColorSecondary"
                    android:gravity="end"
                    android:layout_marginBottom="8dp"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nombre del Conductor:" android:layout_marginTop="8dp" android:textColor="?android:attr/textColorSecondary"/>
                <TextView android:id="@+id/tvNombreConductor" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="--" android:padding="8dp" android:textSize="16sp" android:textColor="?android:attr/textColorPrimary"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardCatalogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/cardConductor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Catálogo de Infracción"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spinnerInfracciones"
                    android:layout_width="match_parent"
                    android:layout_height="55dp" />

                <TextView
                    android:id="@+id/tvArticuloInfraccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:text="Artículo aplicable: --"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:background="?android:attr/selectableItemBackground" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/cardCatalogo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvFechaInfraccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Fecha de la Infracción"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"/>

                <TextView
                    android:id="@+id/tvFFija"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="18sp"
                    android:text="--"
                    android:textColor="?android:attr/textColorPrimary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/cardFecha">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. Geolocalización"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <org.maplibre.android.maps.MapView
                    android:id="@+id/map"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <ImageButton
                    android:id="@+id/btnMyLocation"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_mylocation"
                    app:tint="?attr/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@+id/map"
                    app:layout_constraintEnd_toEndOf="@+id/map" />

                <EditText
                    android:id="@+id/tvDireccionInfraccion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Dirección del incidente"
                    android:textColor="?android:attr/textColorPrimary"
                    android:inputType="text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/map" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSiguiente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="SIGUIENTE"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardMapa"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>