<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTituloPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/levantar_infracci_n"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/tvTituloPrincipal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1_datos_del_veh_culo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="12dp"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/placa" android:textStyle="bold" android:textColor="?android:attr/textColorPrimary"/>
                <EditText android:id="@+id/etPlaca" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/ingresar_placa" android:textColor="?android:attr/textColorPrimary" android:inputType="textCapCharacters" android:maxLength="7"/>

                <CheckBox
                    android:id="@+id/cbVehiculoForaneo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehículo foráneo / No registrado"
                    android:layout_marginTop="4dp"/>

                <Button
                    android:id="@+id/btnConsultarPlaca"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/consultar_placa" />

                <LinearLayout
                    android:id="@+id/layoutVehiculoLectura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tipo" android:layout_marginTop="8dp" android:textColor="?android:attr/textColorSecondary"/>
                    <TextView android:id="@+id/tvTipo" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="--" android:padding="8dp" android:textSize="16sp"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/marca" android:layout_marginTop="8dp" android:textColor="?android:attr/textColorSecondary"/>
                    <TextView android:id="@+id/tvMarca" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="--" android:padding="8dp" android:textSize="16sp"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/modelo" android:layout_marginTop="8dp" android:textColor="?android:attr/textColorSecondary"/>
                    <TextView android:id="@+id/tvModelo" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="--" android:padding="8dp" android:textSize="16sp"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/color" android:layout_marginTop="8dp" android:textColor="?android:attr/textColorSecondary"/>
                    <TextView android:id="@+id/tvColor" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="--" android:padding="8dp" android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutVehiculoManual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tipo de Vehículo" android:layout_marginTop="8dp" android:textColor="?attr/colorPrimary"/>
                    <Spinner android:id="@+id/spinnerTipoManual" android:layout_width="match_parent" android:layout_height="48dp" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Marca" android:layout_marginTop="8dp" android:textColor="?attr/colorPrimary"/>
                    <Spinner android:id="@+id/spinnerMarcaManual" android:layout_width="match_parent" android:layout_height="48dp" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Color Exterior" android:layout_marginTop="8dp" android:textColor="?attr/colorPrimary"/>
                    <Spinner android:id="@+id/spinnerColorManual" android:layout_width="match_parent" android:layout_height="48dp" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Modelo (Año aprox.)" android:layout_marginTop="8dp" android:textColor="?attr/colorPrimary"/>
                    <Spinner android:id="@+id/spinnerModeloManual" android:layout_width="match_parent" android:layout_height="48dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardConductor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/cardVehiculo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_2_datos_del_conductor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="12dp"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/n_mero_de_licencia" android:textStyle="bold" android:textColor="?android:attr/textColorPrimary"/>

                <EditText android:id="@+id/etLicencia" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/ej_l12345678" android:inputType="textCapCharacters" android:maxLength="10"/>

                <CheckBox
                    android:id="@+id/cbSinLicencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No presenta licencia / No encontrada"
                    android:layout_marginTop="4dp"/>

                <Button
                    android:id="@+id/btnValidarLicencia"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/validar_conductor" />

                <LinearLayout
                    android:id="@+id/layoutLicenciaLectura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEstatusLicencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/estado_pendiente_de_validaci_n"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:textColor="?android:attr/textColorSecondary"
                        android:gravity="end"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/nombre_del_conductor" android:layout_marginTop="8dp" android:textColor="?android:attr/textColorSecondary"/>
                    <TextView android:id="@+id/tvNombreConductor" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="--" android:padding="8dp" android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutLicenciaManual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText android:id="@+id/etNombreManual" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Nombre(s) del infractor" android:inputType="textCapWords" />
                    <EditText android:id="@+id/etApellidoManual" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Apellidos del infractor" android:inputType="textCapWords" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardCatalogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/cardConductor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_3_cat_logo_de_infracci_n"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spinnerInfracciones"
                    android:layout_width="match_parent"
                    android:layout_height="55dp" />

                <TextView
                    android:id="@+id/tvArticuloInfraccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:text="@string/art_culo_aplicable"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:background="?android:attr/selectableItemBackground" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/cardCatalogo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvFechaInfraccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_4_fecha_de_la_infracci_n"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"/>

                <TextView
                    android:id="@+id/tvFFija"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="18sp"
                    android:text="--"
                    android:textColor="?android:attr/textColorPrimary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/cardFecha">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_5_geolocalizaci_n"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <org.maplibre.android.maps.MapView
                    android:id="@+id/map"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <ImageButton
                    android:id="@+id/btnMyLocation"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_mylocation"
                    app:tint="?attr/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@+id/map"
                    app:layout_constraintEnd_toEndOf="@+id/map" />

                <EditText
                    android:id="@+id/tvDireccionInfraccion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/direcci_n_del_incidente"
                    android:textColor="?android:attr/textColorPrimary"
                    android:inputType="text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/map" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSiguiente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="@string/siguiente"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardMapa"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>