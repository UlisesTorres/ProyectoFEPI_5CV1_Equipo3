<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_detalle_infraccion_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Infracción: Cargando..."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_detalle_observaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Observaciones: Cargando..."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_detalle_ubicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ubicación: Cargando..."
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_aceptar_solicitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Aceptar Solicitud" />

</LinearLayout>
