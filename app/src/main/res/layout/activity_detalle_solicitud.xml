<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"><!-- Reutilizamos el primer TextView para el ID de la Infracción -->
    <TextView
        android:id="@+id/tv_detalle_folio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Infracción: "
        android:textSize="18sp" />

    <!-- Reutilizamos el segundo TextView para las Observaciones -->
    <TextView
        android:id="@+id/tv_detalle_placa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Observaciones: "
        android:textSize="18sp" />

    <!-- Estos TextViews no se usan en tu Activity actual. Considera eliminarlos si no son necesarios -->
    <TextView
        android:id="@+id/tv_detalle_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha: "
        android:visibility="gone"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_detalle_ubicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicación: "
        android:visibility="gone"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_aceptar_solicitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Aceptar Solicitud" />

</LinearLayout>
