<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvSaludoGrua"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/panel_de_control_operador_de_gr_a"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/swDisponibilidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Estatus: Disponible"
        android:checked="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSaludoGrua" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swDisponibilidad">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerPeticiones"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="20dp"
            android:text="Solicitudes Nuevas"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:cornerRadius="40dp"
            app:icon="@android:drawable/ic_popup_reminder"
            app:iconGravity="textStart"
            app:iconPadding="15dp"
            app:iconSize="28dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnArrastreActivo"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="20dp"
            android:text="Mi Arrastre en Curso"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:cornerRadius="40dp"
            app:icon="@android:drawable/ic_menu_directions"
            app:iconGravity="textStart"
            app:iconPadding="15dp"
            app:iconSize="28dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistorialGrua"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="20dp"
            android:text="Historial"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:cornerRadius="40dp"
            app:icon="@android:drawable/ic_menu_recent_history"
            app:iconGravity="textStart"
            app:iconPadding="15dp"
            app:iconSize="28dp"
            app:strokeWidth="2dp" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfiguracion"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/mi_cuenta_configuraci_n"
        android:textColor="#424242"
        app:icon="@android:drawable/ic_menu_manage"
        app:iconTint="#424242"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>